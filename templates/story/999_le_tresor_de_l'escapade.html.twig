{% extends 'base.html.twig' %}

{% block title %}
    Le trésor de l'escapade
{% endblock %}

{% block stylesheets %}
{{ parent() }}
    <link rel="stylesheet" href="{{asset('css/surprise_box_mini.css')}} ">
	<link rel="stylesheet" href="{{asset('css/surprise_box.css')}} ">
{% endblock %}
			


{% block body %}
    
<div class="bg-black">
    <div class="container-fluid">
        <!-- Changer le titre -->
        <h2 class="col-12 col-md-12 col-lg-12 p-4 mt-5">Le trésor de l'escapade:</h2>

        <div id="carousel-story" class="carousel slide" data-bs-ride="carousel" data-bs-interval="false">
            <div class="carousel-indicators">
                <!-- bouton généré en javascript par rapport au nombre de carousel-item -->
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="flex wrap m-5 contenant-surprise-box" >
                            <div class="box">
                                <div class="box-side box-side-front"></div>
                                <div class="box-side box-side-back"></div>
                                <div class="box-side box-side-left"></div>
                                <div class="box-side box-side-right"></div>
                                <div class="box-side box-side-top"></div>
                                <div class="box-side box-side-bottom"></div>
                                <div class="emoji"><img class="ring" src=" {{ asset('img/surpriseBox/ring2.png') }} " alt=""></div>
                            </div>
                    </div>
                </div>

                <!-- Bouton pour la page suivante -->
                <div class="carousel-item">
                    <div class="flex">
                        <a href="{{path('story_histoire_eternelle2')}}" class="btn button m-3">Oui !</a>
                        <a href="{{path('story_histoire_eternelle_no')}}" class="btn button m-3">Non...</a>
                    </div>
                    <div class="flex"> <img class="misa-navbar" src=" {{ asset('img/misaGif.gif')}} " alt=""></div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('js/surprise_box.js')}} "></script>
{% endblock %}